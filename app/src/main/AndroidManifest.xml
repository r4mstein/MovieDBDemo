<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.r4mstein.moviedbdemo" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_main_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".modules.splash.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".modules.main.MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".modules.login.activity.LoginActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".modules.detail.DetailActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>