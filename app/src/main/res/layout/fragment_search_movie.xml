<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_16"
    android:layout_marginBottom="@dimen/margin_16">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_search_container_FSM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/margin_16"
        android:paddingStart="@dimen/margin_16">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_search_request_FSM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dialog_search"
            android:inputType="text"
            android:maxLength="20"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_container_FSM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/til_search_container_FSM"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_6"
        app:cardCornerRadius="@dimen/corner_radius_4">

        <TextView
            android:id="@+id/tv_search_FSM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_8"
            android:text="@string/search_FSP"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_FSM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_container_FSM"
        android:layout_marginTop="@dimen/margin_6"/>

</RelativeLayout>